{
  "name": "fireside-backend",
  "version": "1.0.50",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "lint": "bunx tsc --noEmit",
    "type-check": "bunx tsc --noEmit",
    "search:setup": "bun run src/scripts/setup-elasticsearch.ts",
    "search:reindex": "bun run src/scripts/reindex-data.ts",
    "search:reindex:recreate": "bun run src/scripts/reindex-data.ts --recreate",
    "search:test": "bun run src/scripts/test-search.ts",
    "payout:backfill": "bun run src/scripts/backfillAdPayout.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.893.0",
    "@aws-sdk/s3-request-presigner": "^3.893.0",
    "@elastic/elasticsearch": "^9.1.1",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/cron": "^1.3.0",
    "@elysiajs/swagger": "^1.3.1",
    "@farcaster/quick-auth": "^0.0.7",
    "bullmq": "^5.58.1",
    "elysia": "latest",
    "ethers": "^6.16.0",
    "ioredis": "^5.7.0",
    "mongoose": "^8.18.0"
  },
  "devDependencies": {
    "bun-types": "latest"
  },
  "module": "src/index.ts"
}
